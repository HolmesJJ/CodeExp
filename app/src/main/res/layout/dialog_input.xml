<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_290"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/bg_dialog"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_28"
        android:layout_marginTop="@dimen/dp_33"
        android:textColor="@color/inputDialogTitle"
        android:textSize="@dimen/sp_19"
        tools:text="Title" />

    <TextView
        android:id="@+id/tv_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_29"
        android:layout_marginTop="@dimen/dp_15"
        android:textColor="@color/inputDialogRemark"
        android:textSize="@dimen/sp_14"
        tools:text="Remark" />

    <LinearLayout
        android:id="@+id/ll_input"
        android:layout_width="@dimen/dp_240"
        android:layout_height="@dimen/dp_43"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_23"
        android:background="@drawable/bg_rounded_rectangle_2dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_score"
            android:layout_width="@dimen/dp_120"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_9"
            android:background="@null"
            android:inputType="number"
            android:maxLength="10"
            android:textColor="@color/inputDialogScore"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/tv_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="%"
            android:textColor="@color/inputDialogUnit"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_31"
        android:layout_marginBottom="@dimen/dp_15"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_ripple_item"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/cancel"
            android:textColor="@color/inputDialogCancel"
            android:textSize="@dimen/sp_20" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_ripple_item"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="@string/confirm"
            android:textColor="@color/inputDialogConfirm"
            android:textSize="@dimen/sp_20" />
    </LinearLayout>
</LinearLayout>