<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.example.codeexp.ui.viewmodel.enterprise.post.EnterprisePostViewModel" />
    </data>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tc="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@color/colorWhite">

        <com.example.codeexp.ui.widget.ToolBar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?android:attr/actionBarSize">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/postBackground"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="26dp"
                        android:text="@string/basic_information"
                        android:textColor="@color/postSubTitle"
                        android:textSize="@dimen/sp_15" />

                    <com.example.codeexp.ui.widget.ItemTextView
                        android:id="@+id/target"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_9" />

                    <com.example.codeexp.ui.widget.ItemTextView
                        android:id="@+id/position"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <com.example.codeexp.ui.widget.ItemTextView
                        android:id="@+id/number_of_employees"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <com.example.codeexp.ui.widget.ItemTextView
                        android:id="@+id/workplace"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <com.example.codeexp.ui.widget.ItemTextView
                        android:id="@+id/job_nature"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <com.example.codeexp.ui.widget.ItemTextView
                        android:id="@+id/expiration_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="26dp"
                        android:text="@string/working_date"
                        android:textColor="@color/postSubTitle"
                        android:textSize="@dimen/sp_15" />

                    <com.example.codeexp.ui.widget.ItemTextView
                        android:id="@+id/start_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_9" />

                    <com.example.codeexp.ui.widget.ItemTextView
                        android:id="@+id/end_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="26dp"
                        android:text="@string/salary"
                        android:textColor="@color/postSubTitle"
                        android:textSize="@dimen/sp_15" />

                    <com.example.codeexp.ui.widget.ItemTextView
                        android:id="@+id/min_of_salary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_9" />

                    <com.example.codeexp.ui.widget.ItemTextView
                        android:id="@+id/max_of_salary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="26dp"
                        android:text="@string/prepaid_salary"
                        android:textColor="@color/postSubTitle"
                        android:textSize="@dimen/sp_15" />

                    <com.example.codeexp.ui.widget.ItemTextView
                        android:id="@+id/total_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_9"
                        android:layout_marginBottom="@dimen/dp_28" />

                    <TextView
                        android:id="@+id/tv_reset_config"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/submit"
                        android:gravity="center"
                        android:layout_marginBottom="@dimen/dp_24"
                        android:background="@drawable/bg_ripple_item"
                        android:padding="@dimen/dp_12" />

                </LinearLayout>

            </ScrollView>

        </RelativeLayout>

    </RelativeLayout>
</layout>